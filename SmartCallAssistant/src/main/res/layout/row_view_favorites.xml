<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.nafshadigital.smartcallassistant.adapter.ListAdapterViewFavorites">


    <ImageView
        android:id="@+id/imgfavcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat = "@mipmap/contact"
       ></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="5sp"
        >
        <TextView
            android:id="@+id/tvnamecon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="fcdsfds"
            android:textColor="#006400"
         />

        <TextView
            android:id="@+id/tvphnnumcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="fadfa"
            android:textColor="#8B0000"
         />
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imgdelfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat = "@mipmap/delete"
        android:layout_marginTop="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4sp"/>
</RelativeLayout>

</LinearLayout>
