<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nafshadigital.smartcallassistant.activity.MyProfile" android:padding="10dp" android:background="@drawable/activity_gradient_bk">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp">
        <ImageView
            android:id="@+id/imgprofilecon"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            app:srcCompat = "@mipmap/appicon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tvnameprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvnumprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtnameprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:hint="Name"/>

        <EditText
            android:id="@+id/txtemailprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:hint="Email"/>

     <!--   <EditText
            android:id="@+id/txtmobilenoprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:hint="Mobile no"/>

        <EditText
            android:id="@+id/txtcodeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:hint="Code"/>  -->
    </LinearLayout>

    <Button
        android:id="@+id/btnupdateprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="Update"/>

    <Button
        android:id="@+id/btnskipprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:onClick="skipprofile"
        android:text="Skip"/>
</LinearLayout>