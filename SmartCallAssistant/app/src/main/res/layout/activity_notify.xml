<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context="com.nafshadigital.smartcallassistant.activity.NotifyActivity" android:backgroundTint="#f3dcba"  android:background="@drawable/borderline">

    <LinearLayout
        android:id="@+id/linearnotify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:backgroundTint="#f3dcba"
        android:background="@drawable/notifyborder">
        <TextView
            android:id="@+id/tvnotiftexttrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Your Phone is on Mute"
            android:textSize="15sp"
            android:textStyle="bold" android:textColor="#ff0000" />
    <TextView
        android:id="@+id/tvnotifactname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvdateact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="Date: "/>

        <TextView
            android:id="@+id/tvdateactnoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/fromtime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_gravity="center"
           android:textSize="15sp"
           android:text="From: "/>

       <TextView
           android:id="@+id/fromtimeact"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_gravity="center"
           android:textStyle="bold"
          />

       <TextView
           android:id="@+id/totime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_gravity="center"
           android:textSize="15sp"
           android:text="To: "
           android:layout_marginLeft="10sp"/>

       <TextView
           android:id="@+id/totimeact"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_gravity="center"
           android:textStyle="bold"
         />
   </LinearLayout>

    <TextView
        android:id="@+id/tvdurationmute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25dp" android:text="00:00"/>
        <TextView
            android:id="@+id/tvdurationmute1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dabb00"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20dp" android:text="ELAPSED" />

        <Button
            android:textSize="10sp"
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:id="@+id/btnoffmute"
            android:text="Cancel Activity"
            android:layout_marginTop="30sp"
            style="@style/SmartButton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnotifcompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3sp"
        android:visibility="gone" android:background="@drawable/borderline">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            app:srcCompat="@mipmap/alarm"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/tvdurationmutecompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15dp" android:text="00:00"/>

        <TextView
            android:id="@+id/tvdurationmute2compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dabb00"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="8dp" android:text="ELAPSED"  />
</LinearLayout>
        <ImageView
            android:id="@+id/imgarrowtrans"
            android:layout_width="22px"
            android:layout_height="22px"
            app:srcCompat="@mipmap/doublearrow"
            android:layout_marginLeft="10sp"/>
    </LinearLayout>
</LinearLayout>