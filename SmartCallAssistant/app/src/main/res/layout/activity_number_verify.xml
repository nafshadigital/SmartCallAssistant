<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".activity.NumberVerify" android:background="@drawable/activity_gradient_bk">

    <TextView
        android:id="@+id/tvverifydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting to automatically detect an SMS sent to"
        android:textSize="20sp" android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtverifycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number"
        android:ems="8"
        android:background="@drawable/control_border"
        android:layout_centerInParent="true"
        android:padding="5sp"
        />
    <View
        android:id = "@+id/empty_view"
        android:layout_height = "20dip"
        android:layout_below="@id/txtverifycode"
        android:layout_width = "match_parent"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnverifycode"
        android:text="Verify"
        android:textColor="#000000"
        android:padding="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/empty_view"
        android:layout_gravity="center"
        style="@style/GradientButton"
        android:onClick="verifycode"/>

</RelativeLayout>