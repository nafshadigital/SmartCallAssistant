<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nafshadigital.smartcallassistant.activity.MyProfile" android:padding="10dp" android:background="@drawable/activity_gradient_bk">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp">
        <ImageView
            android:id="@+id/imgprofilecon"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            app:srcCompat = "@mipmap/appicon"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tvnameprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvnumprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtnameprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:hint="Name"/>

        <EditText
            android:id="@+id/txtemailprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:hint="Email"/>

     <!--   <EditText
            android:id="@+id/txtmobilenoprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:hint="Mobile no"/>

        <EditText
            android:id="@+id/txtcodeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:hint="Code"/>  -->
    </LinearLayout>


    <View
        android:id = "@+id/empty_view"
        android:layout_height = "20dip"
        android:layout_width = "match_parent"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnskipprofile"
            android:text="Skip"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:padding="5sp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#347DA8"
            android:shadowDx="2"
            android:shadowDy="2"
            android:onClick="skipprofile"
            android:shadowRadius="5"
            />

        <View
            android:id="@+id/spacer"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    <Button
        android:id="@+id/btnupdateprofile"
        android:text="Update"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:padding="5sp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#347DA8"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        />


    </LinearLayout>
</LinearLayout>