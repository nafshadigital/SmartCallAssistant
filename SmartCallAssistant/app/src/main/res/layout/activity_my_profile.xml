<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nafshadigital.smartcallassistant.activity.MyProfile" android:padding="10dp" android:background="@drawable/activity_gradient_new">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp">
        <ImageView
            android:id="@+id/imgprofilecon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat = "@mipmap/appicon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tvnameprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvnumprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvmobprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtnameprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:hint="Name"/>

        <EditText
            android:id="@+id/txtemailprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:hint="Email"/>

       <EditText
            android:id="@+id/txtmobilenoprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:hint="Mobile Number"/>
        <!--
        <EditText
            android:id="@+id/txtcodeprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:hint="Code"/>  -->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnupdateprofile"
        style="@style/SmartButton"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="false"
        android:layout_weight="0.5"
        android:text="Update"/>

    <Button
        android:id="@+id/btnskipprofile"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="false"
        android:layout_weight="0.5"
        style="@style/SmartButton"
        android:layout_marginStart="@dimen/_10sdp"
        android:onClick="skipprofile"
        android:text="Skip"/>
    </LinearLayout>
</LinearLayout>