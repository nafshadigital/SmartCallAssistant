<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context="com.nafshadigital.smartcallassistant.adapter.ListAdapterViewCalllog">

    <ImageView
        android:id="@+id/imgincomelog"
        android:layout_width="36sp"
        android:layout_height="36sp"
        app:srcCompat = "@mipmap/incomingcall"
        android:visibility="gone"
        android:layout_weight="2"
        />

    <ImageView
        android:id="@+id/imgoutgolog"
        android:layout_width="36sp"
        android:layout_height="36sp"
        app:srcCompat = "@mipmap/outgoing"
        android:visibility="gone"
        android:layout_weight="2"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvcalllognumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="7"/>

    <TextView
        android:id="@+id/txtcalllogdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="3"/>
</LinearLayout>
    <ImageView
        android:id="@+id/imgcallogdel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat = "@mipmap/delete"
        android:layout_gravity="end"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/imgreclogrigarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat = "@mipmap/info"
        android:layout_gravity="end"
        android:onClick="callloginfo"
        android:layout_weight="1"
     />
</LinearLayout>